<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#E9EBEE"
            ></View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newsFeedPersonInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


            <com.github.abdularis.civ.CircleImageView
                android:id="@+id/newsfeed_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/profileimage"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/newsfeed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Name"
                android:textColor="@color/darkGrey"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/newsfeed_timestamp"
                app:layout_constraintStart_toEndOf="@+id/newsfeed_profile_image" />

            <Button
                android:id="@+id/post_options"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_arrow_drop_down"
                android:drawableTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/newsfeed_profile_image"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/newsfeed_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Time stamp"
                android:textColor="@color/lightGrey"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/newsfeed_profile_image" />


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newsFeedContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/newsfeed_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Content"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:paddingTop="5dp"
        android:id="@+id/newsFeedFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightGrey"

        android:paddingLeft="20dp">


        <TextView
            android:id="@+id/newsfeed_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="File namee"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:id="@+id/newsFeedImage"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center"
        >


        <ImageView
            android:id="@+id/newsfeed_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/profileimage" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/newsFeedVideo"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exo_palyer_view">

        </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

    </LinearLayout>






    <LinearLayout
        android:id="@+id/likeComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@drawable/likeicon"
            android:text="0 likes"
            android:id="@+id/noOfLikes"
            android:drawablePadding="10dp"
            android:textColor="@color/lightGrey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/lightGrey"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="2">


            <Button
                android:layout_gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/like"
                android:text="Like"
                android:id="@+id/likeButton"
                android:drawableTint="@color/lightGrey"
                android:textColor="@color/lightGrey"
                android:background="@null"
                />

            <Button
                android:layout_gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/comment"
                android:text="Comment"
                android:id="@+id/commentButton"
                android:drawableTint="@color/lightGrey"
                android:textColor="@color/lightGrey"
                android:background="@null"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
