<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >


        <TextView
            android:id="@+id/awardTitle"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="Title"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/awardYear"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="Duration"
            android:textAlignment="textStart"
            android:textColor="@color/darkGrey"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@+id/awardTitle"
            tools:layout_editor_absoluteX="0dp" />


        <Button
            android:id="@+id/editAward"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="156dp"
            android:visibility="invisible"
            android:background="@drawable/editpencill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">

        </Button>

        <Button
            android:id="@+id/deleteAwards"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="156dp"
            android:visibility="invisible"
            android:layout_marginEnd="8dp"
            android:background="@drawable/remove"
            app:layout_constraintEnd_toStartOf="@+id/editAward"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp">

        </Button>

    </android.support.constraint.ConstraintLayout>


</ScrollView>