<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C9007cb7"
        ></View>


    <LinearLayout
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:background="@drawable/searchmember"
            android:backgroundTint="@color/white"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            />


        <EditText
            android:id="@+id/nameSearch"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name"
            android:textSize="20dp"/>

        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="Batch"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <Spinner
                android:backgroundTint="@color/black"
                android:id="@+id/batchSearch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="58dp"
                android:entries="@array/Batches"
                />

        </LinearLayout>



        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="Degree"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <Spinner

                android:backgroundTint="@color/black"
                android:id="@+id/degreeSearch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="30dp"
                android:entries="@array/Degree"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="Descipline"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <Spinner
                android:backgroundTint="@color/black"
                android:id="@+id/deciplineSearch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="30dp"
                android:entries="@array/Descipline"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="Campus"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <Spinner
                android:backgroundTint="@color/black"
                android:id="@+id/campusSearch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:entries="@array/Campus"
                android:textSize="30dp" />
        </LinearLayout>


        <Button
            android:id="@+id/searchUserBtn"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryDark"
            android:background="@color/white"
            android:text="Search"
            android:textSize="20dp"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>